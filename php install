add-apt-repository -y ppa:ondrej/php
apt update -y -qq
apt install -y php"${PHP_VER}" libapache2-mod-php"${PHP_VER}"
apt install -y php"${PHP_VER}"-common php"${PHP_VER}"-bcmath php"${PHP_VER}"-gd php"${PHP_VER}"-opcache php"${PHP_VER}"-mbstring php"${PHP_VER}"-tokenizer
apt install -y php"${PHP_VER}"-zip php"${PHP_VER}"-bz2 php"${PHP_VER}"-mysql php"${PHP_VER}"-xml php"${PHP_VER}"-json php"${PHP_VER}"-mcrypt php"${PHP_VER}"-curl
apt install -y php"${PHP_VER}"-intl php"${PHP_VER}"-dom php"${PHP_VER}"-imagick
php -v
